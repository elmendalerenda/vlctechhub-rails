<h1>Listing events</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Day</th>
    <th>Month</th>
    <th>Year</th>
    <th>Organizer</th>
    <th>Location</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @events.each do |event| %>
  <tr>
    <td><%= event.name %></td>
    <td><%= event.day %></td>
    <td><%= event.month %></td>
    <td><%= event.year %></td>
    <td><%= event.organizer %></td>
    <td><%= event.location %></td>
    <td><%= event.time %></td>
    <td><%= link_to 'Show', [:admin, event] %></td>
    <td><%= link_to 'Edit', edit_admin_event_path(event) %></td>
    <td><%= link_to 'Destroy', [:admin, event], confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Event', new_admin_event_path %>

<h2>Clone Events</h2>

<%= form_tag clone_admin_events_path do %>
<p>
  <%= label_tag :year_from %>
  <%= text_field_tag :year_from %>
</p>
<p>
  <%= label_tag :month_from %>
  <%= text_field_tag :month_from %>
</p>
<p>
  <%= label_tag :year_to %>
  <%= text_field_tag :year_to %>
</p>
<p>
  <%= label_tag :month_to %>
  <%= text_field_tag :month_to %>
</p>
<%= submit_tag 'Clone' %>
<% end %>